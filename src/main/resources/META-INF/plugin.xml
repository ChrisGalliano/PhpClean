<!--suppress PluginXmlValidity -->
<idea-plugin>
    <id>com.funivan.idea.phpClean</id>
    <name>PhpClean</name>
    <vendor email="alotofall@gmail.com" url="https://github.com/funivan/PhpClean/">Ivan Shcherbak</vendor>

    <description><![CDATA[
    This plugin introduce some useful inspections
    ]]></description>
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="145.0"/>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="PropertyAnnotationInspection"
                displayName="Property annotation"
                groupName="Types"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.propertyAnnotation.PropertyAnnotationInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="MethodCanBePrivateInspection"
                displayName="Method can be private"
                groupName="Architecture"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.architecture.MethodCanBePrivateInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="MissingParameterTypeDeclarationInspection"
                displayName="Missing parameter type declaration"
                groupName="Architecture"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.architecture.MissingParameterTypeDeclarationInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="PhpCleanUndefinedMethodInspection"
                displayName="Fallback Undefined method"
                groupName="Fallback"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.fallback.PhpCleanUndefinedMethodInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="TypeViolationInspection"
                displayName="Type violation"
                groupName="Experimental"
                enabledByDefault="false"
                level="WEAK_WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.experimental.typeInspection.TypeViolationInspection"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>