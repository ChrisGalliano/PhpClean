<!--suppress PluginXmlValidity -->
<idea-plugin>
    <id>com.funivan.idea.phpClean</id>
    <name>PhpClean</name>
    <vendor email="alotofall@gmail.com" url="https://github.com/funivan/PhpClean/">Ivan Shcherbak</vendor>

    <description><![CDATA[
    This plugin introduce some useful inspections
    ]]></description>
    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="145.0"/>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="PropertyAnnotationInspection"
                displayName="Property annotation"
                groupName="Types"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.propertyAnnotation.PropertyAnnotationInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="MethodCanBePrivateInspection"
                displayName="Method can be private"
                groupName="Architecture"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.methodCanBePrivate.MethodCanBePrivateInspection"
        />
        <localInspection
                groupPath="PHP"
                shortName="MissingReturnTypeInspection"
                displayName="Missing return type declaration"
                groupName="PhpClean"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.returnType.MissingReturnTypeInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="MissingParameterTypeDeclarationInspection"
                displayName="Missing parameter type declaration"
                groupName="Architecture"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.missingParameterType.MissingParameterTypeDeclarationInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="MethodVisibilityInspection"
                displayName="Method visibility"
                groupName="Architecture"
                enabledByDefault="true"
                level="WEAK WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.methodVisibility.MethodVisibilityInspection"
        />
        <localInspection
                groupPath="PHP,PhpClean"
                shortName="PhpCleanUndefinedMethodInspection"
                displayName="Fallback Undefined method"
                groupName="Fallback"
                enabledByDefault="true"
                level="WARNING"
                language="PHP"
                implementationClass="com.funivan.idea.phpClean.inspections.experimental.phpCleanUndefinedMethod.PhpCleanUndefinedMethodInspection"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>