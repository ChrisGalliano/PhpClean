<idea-plugin>
    <id>com.funivan.idea.phpTypes</id>
    <name>PhpTypes</name>
    <version>0.0.1</version>
    <vendor email="alotofall@gmail.com" url="https://github.com/funivan/PhpTypes/">Ivan Shcherbak</vendor>

    <description><![CDATA[
    PhpTypes - inspections and refactoring plugin
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                groupPath="PHP"
                shortName="VariableTypeUsageInspection"
                displayName="Variable type usage inspection"
                groupName="PhpTypes"
                enabledByDefault="true"
                level="ERROR"
                language="PHP"
                implementationClass="com.funivan.idea.phpTypes.typeInspection.VariableTypeUsageInspection"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>